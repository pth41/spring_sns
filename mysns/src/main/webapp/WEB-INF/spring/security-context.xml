<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url pattern="/users/login" access="permitAll"/>
		<security:intercept-url pattern="/**" access="hasRole('ROLE_USER')"/>
		<security:form-login login-page="/login"
			default-target-url="/posts"		
			authentication-failure-url="/login?error=1"
			always-use-default-target="true"
		/>
		
		<security:logout invalidate-session="true" logout-url="logout" logout-success-url="login?logout"/>
	
		<security:csrf/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userService"/>
	</security:authentication-manager>
	
	<bean id="userService" class="org.pth.service.UserService"></bean>

</beans>
